<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="assets_backend" name="intl tel widget assets" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">

            <link rel="stylesheet" href="/intl_tel_widget/static/lib/intl-tel-input/css/intlTelInput.css"/>
            <link rel="stylesheet" type="text/scss" href="/intl_tel_widget/static/src/scss/phone_widget.scss"/>

            <script type="text/javascript" src="/intl_tel_widget/static/lib/intl-tel-input/js/utils.js"/>
            <script type="text/javascript" src="/intl_tel_widget/static/lib/intl-tel-input/js/intlTelInput-jquery.js"/>
            <script type="text/javascript" src="/intl_tel_widget/static/lib/jQuery-Mask/jquery.mask.js"/>
            <script type="text/javascript" src="/intl_tel_widget/static/src/js/phone_widget.js"/>

        </xpath>
    </template>

    <template id="assets_frontend" name="intl tel widget frontend assets" inherit_id="web.assets_frontend">
        <xpath expr="." position="inside">

            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/intl-tel-input@17.0.3/build/css/intlTelInput.css"/>

            <script type="text/javascript" src="/intl_tel_widget/static/src/js/phone_widget_frontend.js"/>
            <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/intl-tel-input@17.0.3/build/js/intlTelInput.js"/>

        </xpath>
    </template>
</odoo>